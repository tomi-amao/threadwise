{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🤖 Debug AI Agent",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/apps/ai-agent/src/ai_agent/main.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/apps/ai-agent",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/apps/ai-agent/src"
      },
      "args": []
    },
    {
      "name": "🧪 Debug AI Agent Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/apps/ai-agent",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/apps/ai-agent/src"
      },
      "args": ["tests/", "-v"]
    }
  ],
  "compounds": [
    {
      "name": "🚀 Debug Full Stack",
      "configurations": ["🤖 Debug AI Agent"],
      "stopAll": true,
      "preLaunchTask": "🌐 Start React Router Only"
    }
  ]
}
